/* pages/record/record.wxss */
/* 遮罩层样式 */
.cui-mask{width: 100%; height: 100%; background: rgba(0,0,0,.4); animation: cui-fade-in .2s ease-out forwards; position: fixed; top: 0px; left: 0px; z-index: 3;}
/* 录音弹窗样式 */
.cui-record{width: 100vw;height: 100vh;opacity: 0;animation: cui-fade-in .2s ease-out forwards;position: fixed;top: 0;left: 0;z-index: 4;}
.cui-record .cui-record-main{width: -webkit-calc(100vw - 0px);width: calc(100vw - 0px); max-height: 50vh;overflow: hidden;border-top-left-radius: 10px; border-top-right-radius: 10px; background: #FFF; bottom: -60px; animation: cui-slide-up2 .55s cubic-bezier(0.68, -0.55, 0.27, 1.35) forwards; position: absolute;	left: 0px;z-index: 4;}
.cui-record .cui-record-title{	width: 100%;min-height: 50px;	line-height: 25px;	padding: 12px 10px;	text-align: center;	color: #646464; margin: 10px 0 0 0;	box-sizing: border-box;	font-size: 16px;	font-weight: 600;	background: #FFF;position: relative;}
.cui-record .cui-record-close{width: 40px; height: 40px; position: absolute; top: 0px; right: 0px;}
.cui-record .cui-record-close image{width: 20px; height: 20px; margin: 10px;}
.cui-record .cui-record-load{width: 100%; height: 60px; text-align: center; margin: 0px;font-size: 10px;}
.cui-record .cui-record-load .rect-animate{ background-color: #FF9204; height: 100%; width: 5px; border-radius: 20px; margin: 0 3px; display: inline-block; -webkit-animation: stretchdelay 1.2s infinite ease-in-out; animation: stretchdelay 1.2s infinite ease-in-out;}
.cui-record .cui-record-load .rect{ background-color: #FF9204; height: 100%; width: 5px; border-radius: 20px; margin: 0 3px; display: inline-block;-webkit-transform: scaleY(0.1); transform: scaleY(0.1);}
.cui-record .cui-record-load .rect-small-1{-webkit-transform: scaleY(0.1); transform: scaleY(0.1);}
.cui-record .cui-record-load .rect-small-2{-webkit-transform: scaleY(0.15); transform: scaleY(0.15);}
.cui-record .cui-record-load .rect-small-3{-webkit-transform: scaleY(0.2); transform: scaleY(0.2);}
.cui-record .cui-record-load .rect2 { -webkit-animation-delay: -1.1s;animation-delay: -1.1s;}
.cui-record .cui-record-load .rect3 { -webkit-animation-delay: -1.0s; animation-delay: -1.0s;}
.cui-record .cui-record-load .rect4 { -webkit-animation-delay: -0.9s; animation-delay: -0.9s;}
.cui-record .cui-record-load .rect5 { -webkit-animation-delay: -0.8s; animation-delay: -0.8s;}
.cui-record .cui-record-load .rect6 { -webkit-animation-delay: -0.7s; animation-delay: -0.7s;}
.cui-record .cui-record-load .rect7 { -webkit-animation-delay: -0.6s; animation-delay: -0.6s;}
.cui-record .cui-record-load .rect8 { -webkit-animation-delay: -0.5s; animation-delay: -0.5s;}
.cui-record .cui-record-load .rect9 { -webkit-animation-delay: -0.4s; animation-delay: -0.4s;}
.cui-record .cui-record-close-tip{width: 100%; line-height: 50px; font-size: 14px; color: #909090; text-align: center;}
.cui-record .cui-record-stopbtn{width: -webkit-calc(100% - 20px); width: calc(100% - 40px); height: 40px; line-height: 40px; text-align: center; border-radius: 5px; background: #FF9204; margin: 30px 20px 20px 20px;}
.cui-record .cui-record-stopbtn image{width: 15px; height: 15px; margin: 12.5px 5px 12.5px 0; display: inline-block; vertical-align: top; animation: cui-record-stopbtn-animate 1s infinite linear forwards; -webkit-animation: cui-record-stopbtn-animate 1s infinite linear forwards;}
.cui-record .cui-record-stopbtn text{height: 100%; line-height: 40px; font-size: 15px; margin: 0 5px; display: inline-block; vertical-align: top; color: #FFF;}