.body{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}
.view{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.image{
