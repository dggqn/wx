  <!-- 待接单 -->
  <view class="apply-repair-list" wx:if="{{tab == '1'}}">
    <view class="repair-list-box">
      <view class="list-item" wx:for="{{repairList}}" wx:key="index" bindtap="goDetail" data-itemDetail="{{item}}">
        <view wx:if="{{item.status=='1'}}" class="item-status">待分配</view>
        <view wx:if="{{item.status=='2'}}" class="item-status">待接受</view>
        <view wx:if="{{item.status=='3'}}" class="item-status">已接受</view>
        <view wx:if="{{item.status=='5'}}" class="item-status-accept">已完成</view>
        <view class="item-title">编号：{{item.taskId}}</view>
        <view class="item-detail flex">
          <view class="item-detail-img img-box">
            <image class="img" src="{{aliyunBaseImgUrlPre}}images/default.png"></image>
            <!-- <image class="img" src="{{item.displayImgUrl}}"></image> -->
          </view>
          <view class="item-detail-box flex-1">
            <view class="detail-type">
              <text class="type-l">维修资产：</text>
              <text class="type-r">{{item.assetsName}}</text>
            </view>
            <view class="detail-type">
              <text class="type-l">维修地址：</text>
              <text class="type-r">{{item.taskPostion}}</text>
            </view>
            <view class="detail-type">
              <text class="type-l">报修时间：</text>
              <text class="type-r">2022-3-17{{item.createTime}}</text>
            </view>
            <view class="detail-problem">
              <text class="problem-l">问题：</text>
              <text class="problem-r">{{item.taskDescription}}</text>
            </view>
          </view>
        </view>
        <block wx:if="{{item.status=='1'}}">
          <view class="item-operate" catchtap="goDetail" data-itemDetail="{{item}}">
            <text class="operate-btn">去分配</text>
          </view>
        </block>
        <block wx:if="{{item.status=='2' && item.userId  &&  item.userId == userInfo.userId}}">
          <view class="item-operate" catchtap="">
            <text class="operate-btn">待接受</text>
          </view>
        </block>
        <block wx:if="{{item.status=='3'}}">
          <view class="item-operate" catchtap="">
            <text class="operate-btn">待完成</text>
          </view>
        </block>
      </view>
    </view>
  </view>

