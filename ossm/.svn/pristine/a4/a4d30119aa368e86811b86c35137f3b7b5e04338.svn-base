/* pages/repair/repairDeclare/repairDeclare.wxss */
.repair-declare-top{
  background: #fff;
}
.repair-declare-top .top-tabs{
  height: 78rpx;
  color: #6F6F8E;
  padding: 0 30rpx;
}
.repair-declare-top .top-tabs .tab{
  margin-right: 30rpx;
  font-size: 30rpx;
  text-align: center;
  position: relative;
}
.repair-declare-top .top-tabs .tab.active {
  color: #715FFF;
}
.repair-declare-top .top-tabs .tab .bottom-line{
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translate(-50%);
  width: 40rpx;
  height: 4rpx;
  border-top-left-radius: 4rpx;
  border-top-right-radius: 4rpx;
  background: #715FFF;
}
.repair-declare-top .top-scan-search {
  height: 122rpx;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}
.top-scan-search .scan-box{
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
}
.top-scan-search .search-box {
  height: 100%;
}
.show-box{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background-color: white;
}
/* .show-box text{
  margin: 10px;
} */
.show-box image{
  width: 400rpx;
  height: 400rpx;
}
.repair-declare-main{
  box-sizing: border-box;
}
.repair-declare-apply .declare-apply-detail{
  padding: 0 30rpx;
}
.repair-declare-apply .declare-apply-item-title {
  margin-top: 28rpx;
  color: #30304C;
}
.repair-declare-apply .problem {
  background: #fff;
  margin-top: 24rpx;
  border-radius: 16rpx;
}
.repair-declare-apply .problem .problem-selects{
  padding: 8rpx 12rpx;
}
.problem .problem-selects .select-item {
  display: inline-block;
  height: 58rpx;
  line-height: 58rpx;
  background: #E7E7F2;
  padding: 0 34rpx;
  border-radius: 29rpx;
  font-size: 24rpx;
  margin: 16rpx 12rpx;
  color: #30304C;
}
.problem .problem-selects .select-item.active{
  color: #6C66FA;
  border: 2rpx solid #6C66FA;
  box-sizing: border-box;
  background: #EBE9FF;
}
.problem .declare-reasons{
  padding: 40rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #ABABC6;
  box-shadow:3rpx -3rpx 14rpx 0 rgba(126,145,195,0.2);
}
.problem .declare-reasons .has-selected{
  padding: 0 20rpx;
  min-height: 73rpx;
  box-sizing: border-box;
  background: #E7E7F2;
}
.problem .declare-reasons .has-selected-box {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #C4C4D9;
}
.problem .declare-reasons .input-reason {
  height: 154rpx;
}
.input-reason .input-reason-area{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background: #E7E7F2;
}

.repair-declare-apply .photo-box {
  background: #fff;
  margin-top: 24rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  box-sizing: border-box;
}
.voice-margin{
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
}
.voice-huatong{
  height: 90rpx;
  width: 90rpx;
}
.voiceActive{
  background-color: rgb(123, 228, 228);
}
.voice-padding{
  width: 50%;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.voiceSayClass{
  font-size:24rpx;
}
.voice-X{
  width: 100rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 320;
  margin-left: 10rpx;
}
.voice-icon{
  margin-left: 15rpx;
  width: 50rpx;
  height: 50rpx;
}
.voice-icon1{
  margin-left: 30rpx;
}
.voice-box {
  background: #fff;
  margin-top: 14rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
}
.photo-box .photo-item {
  width: 180rpx;
  height: 180rpx;
  border: 1rpx dashed #C4C4D9;
  border-radius: 16rpx;
  position: relative;
}
.photo-box .photo-item .take-img {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}
.spare-box {
  background: #F4F7FF;
  padding: 20rpx 0 24rpx;
}
.spare-box .spare-select-flag {
  width: 28rpx;
  height: 28rpx;
}

.contact-person {
  background: #fff;
  border-radius: 16rpx;
  padding: 48rpx 60rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
  margin-bottom: 20rpx;
}
.contact-person .contact-person-item {
  margin-top: 40rpx;
  border-bottom: 1rpx solid #C4C4D9;
  color: #30304C;
  font-weight: 400;
  padding-bottom: 10rpx;
}
.declare-asset-popup-box{
  width: 700rpx;
  border-radius:40rpx;
}
.declare-asset-popup-box .asset-title {
  width: 100%;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 32rpx;
}
.declare-asset-popup-box .asset-bottom{
  padding: 20rpx 90rpx 24rpx;
}
.declare-asset-popup-box .asset-bottom .btn {
  width: 240rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 44rpx;
  box-sizing: border-box;
}
.declare-asset-popup-box .asset-bottom .cancel-btn{
  border: 2rpx solid #6C66FA;
  color: #6C66FA;
}
.declare-asset-popup-box .asset-bottom .confirm-btn {
  background: #6C66FA;
  color: #fff;
}


/* 我的保修单 */
.apply-repair-list{
  padding-top: 24rpx;
}
.repair-list-box{
  padding: 30rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  overflow: auto;
  background: #fff;
}
.list-item{
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  border-radius:4rpx 4rpx 0 0;
  border: 1rpx solid rgba(111,111,142,1);
  background: #FDFAFF;
  position: relative;
}
.list-item .item-status {
  position: absolute;
  right: 0;
  top: -1rpx;
  width: 100rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border: 2rpx solid #5EA1F2;
  color: #5EA1F2;
  font-size:24rpx;
}
.list-item .item-status-accept {
  position: absolute;
  right: 0;
  top: -1rpx;
  width: 100rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border: 2rpx solid #ff976a;
  color: #ff976a;
  font-size: 24rpx;
}.list-item .item-status-ok {
  position: absolute;
  right: 0;
  top: -1rpx;
  width: 100rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border: 2rpx solid green;
  color: green;
  font-size: 24rpx;
}
.list-item .item-title{
  font-size: 24rpx;
  color: #6F6F8E;
}
.list-item .item-detail{
  margin-top: 24rpx;
}
.list-item .item-detail .item-detail-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 16rpx;
}
.item-detail .item-detail-box .detail-type .type-l{
  color: #6F6F8E;
  font-size: 24rpx;
}
.item-detail .item-detail-box .detail-type .type-r {
  color: #6F6F8E;
  font-size: 24rpx;
  font-weight: 500;
}
.item-detail .item-detail-box .detail-problem{
  margin-top: 20rpx;
  color: #8E8BA7;
  font-size: 24rpx;
}
.list-item  .item-operate{
  height: 51rpx;
  text-align: right;
  margin-top: 12rpx;
}
.list-item  .item-operate .operate-btn {
  display: inline-block;
  width: 128rpx;
  height: 51rpx;
  line-height: 51rpx;
  text-align: center;
  border-radius: 4rpx;
  color: #fff;
  background: #6C66FA;
  font-size: 24rpx;
}
.img {
  width: 60rpx;
  height: 60rpx;
}
.duration {
  position: absolute;
  margin-left: 10px;
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  font-family: microsoft yahei;
}
.up-item {
  background-color: white;
}
 /* 底部长按钮 */
.bottom-btn-view{
  margin-right: 1rpx;
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  text-align: center;
  line-height: 96rpx;
  font-size: 28rpx;
  color: #fff;
}
.bottom-btn1{
  background:#ffffff;
  margin-top: 8rpx;
  height: 70rpx;
  width: 28%;
  border: 1px solid #78B8FD;
  border-radius: 40rpx;
  line-height: 62rpx;
  text-align: center;
  font-size: 28rpx;
  font: #78B8FD;
}
.bottom-btn2{
  background:#78B8FD;
  height: 86rpx;
  line-height: 78rpx;
  width: 56%;
  border: 1px solid #fff;
  border-radius: 60rpx;
  text-align: center;
  font-size: 28rpx;
}
.unselected{
  margin-right: 100rpx;
}