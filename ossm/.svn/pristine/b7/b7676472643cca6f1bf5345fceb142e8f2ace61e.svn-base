/* pages/applyPages/applyCalendar/applyCalendar.wxss */
.year-month{
  height: 78rpx;
  line-height: 78rpx;
  background: #fff;
}
.year-month .year{
  width: 110rpx;
  padding: 0 30rpx;
  position: relative;
}
.year-month .year::after{
  content: '';
  position: absolute;
  right: 15rpx;
  top: 50%;
  width: 1rpx;
  height: 30rpx;
  transform: translateY(-50%);
}
.year-month .month {
  overflow: hidden;
}
.year-month .month .scroll-box{
  white-space: nowrap
}
.year-month .month .month-item{
  display: inline-block;
  padding: 0 28rpx;
  color: #6F6F8E;
  position: relative;
}
.year-month .month .month-item .line{
  width: 36rpx;
  height: 4rpx;
  position: absolute;
  bottom: 12rpx;
  left: 50%;
  background: #6C66FA;
  transform: translateX(-50%);
}

.calendar-box{
  padding: 10rpx 0;
  background:linear-gradient(308deg,rgba(172,159,253,1) 0%,rgba(108,102,250,1) 100%);
}

.apply-box{
  padding: 0 30rpx;
}
.apply-box .apply-title {
  padding: 28rpx 0 24rpx;
}
.apply-item .item-top{
  height: 54rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  line-height: 54rpx;
  background: #FBFBFF;
  font-size: 24rpx;
}
.apply-item .item-top .item-time{
  color: #9090A8;
}
.apply-item .item-content {
 padding: 30rpx;
 box-sizing: border-box;
 background: #fff;
}
.apply-item .item-content .content-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.apply-item .item-content .content-intro .content-status{
  color: #5EA1F2;
}
.apply-item .item-content .content-intro .content-num{
  color: #9090A8;
  font-size: 24rpx;
}
.apply-item .item-content .content-intro .content-tip{
  color: #322D53;
  font-size: 24rpx;
}