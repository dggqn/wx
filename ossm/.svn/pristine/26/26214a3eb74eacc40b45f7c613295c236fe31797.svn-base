    <view class="operate-box flex">
      <view class="flex-1 operate-item operate-anti flex-align-items-center" bindtap="GoAntiEpidemic">
        <view class="operate-item-img img-box">
          <image class="img" src="{{aliyunBaseImgUrlPre}}images/operate-apply.png"></image>
        </view>
        <view class="flex-1 operate-text">
          <view>应急</view>
          <view>抗疫</view>
