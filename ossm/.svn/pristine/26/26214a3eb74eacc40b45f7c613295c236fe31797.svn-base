      </view>
      <view class="flex-1 operate-item flex-align-items-center">

      </view>
      <view class="flex-1 operate-item flex-align-items-center"></view>
    </view>
  </view> -->

  <!-- 申领单 -->
  <view class="apply-list-container">
    <view class="apply-list-title flex">
      <view class="flex-1">我的申领单</view>
      <navigator url="/pages/applyPages/hasApplyList/hasApplyList">
        <text>更多</text>
        <text class="iconfont iconyoujiantou-new-01"></text>
      </navigator>
    </view>
    <view class="list-item" wx:for="{{applyList}}" wx:key='item'>
      <view class="item-top flex">
        <view class="item-id flex-1">ID:{{item.ordersNo}}</view>
        <view class="item-time"><text class="iconfont iconshijian-01"></text>{{item.applyTimeShowStr}}</view>
      </view>
      <view class="item-center flex-align-items-center" data-entityid="{{item.entityId}}" bindtap="goApplyDetail">
        <view class="center-l flex-1 flex">
          <view class="center-l-head img-box">
            <open-data type='userAvatarUrl' class="img"></open-data>
          </view>
          <view class="center-detail flex-1 flex-shink-1">
            <view class="detail-t">
              <!--              <text class="detail-status">{{item.statusName}}</text>-->
              <text class="detail-status">{{item.progressDesc}}</text>
              <!--              <text class="detail-num">(共{{item.detailCount}}项)</text>-->
            </view>
            <view class="detail-intro">
              共{{item.detailCount}}项
              <!--              {{item.progressDesc}}-->
            </view>
          </view>
        </view>
        <view class="center-r">
          <view class="detail-operate">
            <text>查看详情</text>
            <text class="iconfont iconyoujiantou-new-01"></text>
          </view>
        </view>
      </view>
      <!-- 非取消进度条 -->
      <view class="public-collor-step flex-align-items-center" wx:if="{{item.statusCode !== 'canceled'}}">
        <view class="step-rate flex-shink-1" style="width:{{item.receiveRate}}%"></view>
        <view class="step-num flex-shink-0">
          {{item.receiveRate}}%
        </view>
      </view>
      <!-- 已取消进度条 -->
      <view class="public-collor-step flex-align-items-center" wx:else>
        <view class="step-rate step-cancel-rate">
        </view>
      </view>
    </view>
    <!-- 空图片 -->
    <view class="empty-box" wx:if="{{!isLoadingFlag && applyList.length <= 0}}">
      <image class="empty-img" src="{{aliyunBaseImgUrlPre}}images/empty.png"></image>
      <view class="empty-tip">暂无单据</view>
    </view>
  </view>
  <!-- 扫码 -->
  <view class="scan-box box-shadow flex-center" bindtap="scan">
    <image class="scan" src='{{aliyunBaseImgUrlPre}}images/scan-icon.png'></image>
  </view>
  <!--  <view bindtap="gologin">-->
  <!--    登录-->
  <!--  </view>-->
