.czh-steps-left{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.czh-steps-left .icongou-02,.czh-steps-left .iconcha-01{
  position: absolute;
  right: 4rpx;
  top: 58rpx;
  color: #fff;
  border-radius: 6rpx;
  font-size: 28rpx;
}
.czh-steps-left .icongou-02{
  background-color: #7bb2c3;
}
.czh-steps-left .iconcha-01{
  background-color: #e6a39b;
}
.czh-steps-vertical .czh-steps-vertical-item .line{
  margin-top: 10rpx;
  width: 6rpx;
  background-color: #D8D8D8;
}
.czh-steps-vertical .czh-steps-vertical-item .short{
  height: 66rpx;
}
.czh-steps-vertical .czh-steps-vertical-item .long{
  height: 178rpx;
}
.czh-steps-vertical .czh-steps-vertical-item .introduce{
  padding: 0 28rpx;
  flex: 1;
}
.czh-steps-vertical .date{
  margin-left: 10rpx;
}
.czh-steps-right-info-item1 .state{
  font-size: 30rpx;
  color: #1C3A62;
}
.czh-steps-right-info-item1 .time{
  font-size: 28rpx;
  color: #9494C3;
}

.czh-steps-right-info-item2{
  font-size: 30rpx;
  color: #9494C3;
}
.czh-steps-right-info-item3{
  margin-top: 8rpx;
  padding: 16rpx;
  width: 472rpx;
  height: 150rpx;
  overflow-y: auto;
  background-color: #E7E7F2;
  font-size: 24rpx;
  color: #928EAF;
}
.czh-steps-right-info-item3::-webkit-scrollbar-track-piece {
  background-color: rgba(108, 102, 250,0);
  border-left: 1px solid rgba(108, 102, 250,0);
}

.czh-steps-right-info-item3::-webkit-scrollbar {
  width: 5px;
  height: 13px;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}

.czh-steps-right-info-item3::-webkit-scrollbar-thumb {
  background-color: rgba(108, 102, 250, 0.5);
  background-clip: padding-box;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  min-height: 28px;
}

.czh-steps-right-info-item3::-webkit-scrollbar-thumb:hover {
  background-color: rgba(108, 102, 250, 0.5);
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
}
.czh-steps-right-info-item3 .change-record-item{
  margin-top: 24rpx;
}
.czh-steps-right-info-item3 .change-record-item .details{
  margin: 4rpx 0;
  font-size: 26rpx;
  white-space:break-spaces;
}
.footer-btn-box{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  width: calc( 100% - 60rpx );
  box-shadow: -3px -3px 14px 0px rgba(126, 145, 195, 0.2);
  background-color: #fff;
}
.footer-btn-box .btn{
  margin: 0 0 0 20rpx;
  bottom: 0;
  width: 208rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  box-shadow: -3rpx -3rpx 14rpx 0rpx rgba(126, 145, 195, 0.2);
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #6C66FA;
  border: 2rpx solid #6C66FA;
  background-color: #fff;
}
.footer-btn-box .blue{
  background-color: #6C66FA;
  color: #fff;
}
.trouble-list-popup .director-list-popup-item1{
  padding: 20rpx 32rpx;
  font-size: 32rpx;
  color: #fff;
}
.trouble-list-popup .blue{
  background-color: #6C66FA;
  border: none;
}
.trouble-list-popup .red{
  background-color: #C16257;
}
.trouble-list-popup .director-list-popup-item2{
  padding: 32rpx;
}
.trouble-list-popup .director-list-popup-item2 .placeholder-txra{
  font-size: 28rpx;
  color: #8393A8;
}
.trouble-list-popup .director-list-popup-item2 .txra{
  padding: 20rpx 20rpx 0 20rpx;
  width: calc( 100% - 40rpx);
  height: 180rpx;
  background-color: #E7E7F2;
}
.trouble-list-popup-item-approve{
  margin: 0;
  padding: 10rpx 0;
  border-top: 1rpx solid #C4C4D9;
}
.trouble-list-popup-item-approve .line{
  width: 1rpx;
  height: 60rpx;
  background-color: #C4C4D9;
}
.trouble-list-popup-item-approve .btn{
  color: black;
  background-color: initial;
  border: none;
  font-size: 32rpx;
  color: #1C3A62;
}
.trouble-list-popup-item-approve .btn::after{
  border: none;
}

.van-popup{
  border-radius: 40rpx;
  box-shadow: 3px 3px 14px 0px rgba(126, 145, 195, 0.2);
}

.originator{
  margin-right: 8rpx;
  color: #c4c1fd;
}
.realname{
  margin-right: 8rpx;
}
