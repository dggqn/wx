page{
  background-color: #F4F7FF;
  --width:88rpx;
}
.public-list .list-item .item-detail{
  width: 458rpx;
}
.specifications{
  white-space: nowrap;
}
.details-header{
  padding: 0 30rpx;
  height: 206rpx;
  background-color: #6C66FA;
  border-radius:  0 0 70rpx 70rpx;
  color: #fff;
  font-size: 28rpx;
}
.details-header .header-content {
  margin-top: -20rpx;
  width: 100%;
}
.details-header .header-content .header-content-l .img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.details-header .header-content .header-content-l .title{
  margin-left: 18rpx;
}
.details-introduce{
  position: relative;
  height: 148rpx;
}
.details-introduce .introduce{
  position: absolute;
  left: 5%;
  top: -21%;
  padding: 24rpx 30rpx;
  width: calc( 90% - 60rpx );
  font-size: 24rpx;
  color: #1C3A62;
  background-color: #fff;
}
.details-introduce .introduce .info{
  margin-bottom: 24rpx;
}
.introduce .introduce-instructions{
  padding-top: 12rpx;
  height: 62rpx;
  border-top: 1rpx solid #E7E7F2;
}
.assets-change-txra{
  margin-top: 28rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
}
.assets-change-txra .title{
  padding: 0 30rpx;
  padding-top: 32rpx;
  font-size: 30rpx;
  color: #1C3A62;
}
.change-steps{
  margin-top: 24rpx;
  padding: 28rpx 30rpx;
  background-color: #fff;
}
.change-steps .title{
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.change-steps .title-active{
  position: relative;
  color:#6C66FA
}
.change-steps .title-active::after{
  content: '';
  position: absolute;
  top: 130%;
  left: 20%;
  width: 60%;
  height: 4rpx;
  background-color: #6C66FA;
}
.czh-steps-vertical{
  margin-top: 42rpx;
}
.czh-steps-vertical .czh-steps-vertical-item{
  margin-top: 10rpx;
}
