page{
  background-color: #F4F7FF;
  font-size: 24rpx;
  color: #30304C;
}

.input-box{
  padding: 30rpx 30rpx 0 30rpx;
}
.input-box .ipt{
  position: relative;
  padding: 25rpx 20rpx;
  width: 646rpx;
  font-size: 28rpx;
  color: #30304C;
  border: 2rpx solid #D6D6E7;
  background-color: #fff;
  border-radius: 8rpx;
}
.input-box .placeholder-ipt{
  color: #9090A8;
}
.input-box .ipt .identify{
  position: absolute;
  top: 28rpx;
  right: 40rpx;
  color: #6C66FA;
  font-size: 26rpx;
  font-weight: 600;
}
.assetInventory{
  padding: 30rpx;
}
.assetInventory-card{
  background-color: #fff;
}
.card-header{
  padding: 12rpx 24rpx;
  background-color: #FBFBFF;
}
.card-info{
  padding: 30rpx 24rpx 0 24rpx;
}
.card-info .image{
  margin-right: 24rpx;
  width: 140rpx;
  height: 140rpx;
}
.card-info .card-info-font .card-info-font-item{
  margin-bottom: 4rpx;
}
.card-info .card-info-font .title{
  margin-top: -4rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.card-info .card-info-font .specifications{
  white-space: nowrap;
}
.card-info .card-info-font .content{
  max-width: 408rpx;
}
.describe{
  padding: 16rpx 24rpx;
  color: #C441B3;
}

.asset-details{
  padding: 36rpx 24rpx;
  margin-top: 24rpx;
  background-color: #fff;
}
.asset-details-item{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-right: 60rpx;
}
.asset-details-item .title{
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.asset-details-item .img{
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
}
.sign{
  margin-top: 46rpx;
  font-size: 28rpx;
}
.inventory-item{
  font-size: 28rpx;
}
.inventory-item .title{
  margin-top: 4rpx;
  padding:24rpx 30rpx;
}
.inventory-item .content{
  padding: 40rpx;
  background-color: #fff;
}
.inventory-item .content .upload{
  margin-right: 60rpx;
  width: 180rpx;
  height: 180rpx;
}
.inventory-item .content .info{
  padding: 20rpx;
  background-color: #E7E7F2;
  font-size: 24rpx;
}
.inventory-item .content .info .img{
  margin-right: 20rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
}
.add-lable{
  padding: 32rpx 40rpx;
  font-size: 28rpx;
}
.flex-end{
  padding: 8rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  color: #6C66FA;
  font-size: 28rpx;
}
.flex-end .border{
  margin-top: -2rpx;
  width: 226rpx;
  height: 2rpx;
  background-color: #6C66FA;
}
.add-lable .lable-item{
  position: relative;
  padding: 14rpx 28rpx;
  margin-left: 24rpx;
  color: #6C66FA;
  border-radius: 8px;
  border: 2rpx solid #6C66FA;
}
.add-lable .lable-item-active{
  background-color: #6C66FA;
  color: #fff;
}
.add-lable .lable-item-active::after{
  content: '';
}
.lable-content .lable-item .angle-of-the{
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 0 24rpx 0 0;
}
.submit-inventory{
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 20rpx;
  width: 100%;
  background-color: #fff;
}
.submit-inventory .btn{
  width: 546rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #FBFBFF;
  font-size: 28rpx;
  background: #6C66FA;
  border-radius: 100rpx;
}
.submit-inventory .btn::after{
  border: none;
}
.can-not{
  width: 568rpx;
  background-color: #fff;
}
.can-not-header{
  padding: 20rpx 32rpx;
  background-color: #6C66FA;
  font-size: 32rpx;
  color: #fff;
}
.can-not-lable{
  padding: 0 0 29rpx 32rpx;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #80B4DF;
}
.can-not-lable .lable-item{
  margin-right: 32rpx;
  margin-top: 29rpx;
  padding: 8rpx 12rpx;
  border:2rpx solid #80B4DF;
  border-radius: 8rpx;
}
.can-not-lable .lable-item-active{
  background-color: #80B4DF;
  color: #fff;
}
.can-not-txra{
  padding: 0 32rpx 32rpx 32rpx;
}
.can-not-txra .can-not-txra-box{
  padding: 20rpx 16rpx 12rpx 20rpx;
  background-color: #E7E7F2;
}
.can-not-txra .can-not-txra-box .txra{
  width: 468rpx;
  height: 100rpx;
}
.can-not-txra .can-not-txra-box .limit{
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #8393A8;
}
.can-not-division{
  height: 1rpx;
  background-color: #C4C4D9;
}
.can-not-btn-box{
  padding: 18rpx 0;
}
.can-not-btn-box .btn{
  margin: 0;
  padding: 8rpx 110rpx;
  white-space: nowrap;
  font-size: 32rpx;
  color: #1C3A62;
  background-color: inherit;
}
.can-not-btn-box .btn::after{
  border: none;
}
.can-not-btn-box .division{
  width: 1rpx;
  background-color: #C4C4D9;
}
/* 修改vant组件的弹窗 */
.van-popup{
  border-radius: 12rpx;
}
