/* pages/repair/RepairmanPage/RepairOrder/RepairOrder.wxss */
/* tab栏 */
.repair-declare-top {
  background: #fff;
}

.repair-declare-top .top-tabs {
  height: 78rpx;
  color: #6F6F8E;
  padding: 0 30rpx;
}

.repair-declare-top .top-tabs .tab {
  margin-right: 30rpx;
  font-size: 30rpx;
  text-align: center;
  position: relative;
}

.repair-declare-top .top-tabs .tab.active {
  color: #715FFF;
}

.repair-declare-top .top-tabs .tab .bottom-line {
  position: absolute;
  bottom: -12rpx;
  left: 50%;
  transform: translate(-50%);
  width: 40rpx;
  height: 4rpx;
  border-top-left-radius: 4rpx;
  border-top-right-radius: 4rpx;
  background: #715FFF;
}

.repair-declare-top .top-scan-search {
  height: 122rpx;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}

/* 我的维修单 */
.apply-repair-list {
  padding-top: 0rpx;
  padding-bottom: 95rpx;
}
.apply-repair-bottom {
  height: 122rpx;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}

.repair-list-box {
  padding: 0 30rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  overflow: auto;
  /* background: #fff; */
}

.list-item {
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  border-radius: 4rpx 4rpx 0 0;
  border: 1rpx solid rgba(111, 111, 142, 1);
  background: #FDFAFF;
  position: relative;
}

.list-item .item-status {
  position: absolute;
  right: 0;
  top: -1rpx;
  width: 100rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border: 2rpx solid #5EA1F2;
  color: #5EA1F2;
  font-size: 24rpx;
}
.list-item .item-status-accept {
  position: absolute;
  right: 0;
  top: -1rpx;
  width: 100rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border: 2rpx solid #ff976a;
  color: #ff976a;
  font-size: 24rpx;
}

.list-item .item-title {
  font-size: 24rpx;
  color: #6F6F8E;
}

.list-item .item-detail {
  margin-top: 24rpx;
}

.list-item .item-detail .item-detail-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 16rpx;
}

.item-detail .item-detail-box .detail-type .type-l {
  color: #6F6F8E;
  font-size: 24rpx;
}

.item-detail .item-detail-box .detail-type .type-r {
  color: #6F6F8E;
  font-size: 24rpx;
  font-weight: 500;
}

.item-detail .item-detail-box .detail-problem {
  margin-top: 6rpx;
  color: #8E8BA7;
  font-size: 24rpx;
}
.item-detail .item-detail-box .detail-problem .problem-l {
  color: #6F6F8E;
  font-size: 24rpx;
}

.item-detail .item-detail-box .detail-problem .problem-r {
  color: #8888a3;
  font-size: 24rpx;
  font-weight: 500;
  word-break: break-all;
}

.list-item .item-operate {
  height: 51rpx;
  text-align: right;
  margin-top: 12rpx;
}

.list-item .item-operate .operate-btn {
  display: inline-block;
  width: 128rpx;
  height: 51rpx;
  line-height: 51rpx;
  text-align: center;
  border-radius: 4rpx;
  color: #fff;
  background: #6C66FA;
  font-size: 24rpx;
  margin-left:5rpx;
}

/* 成员列表 */
.member-top{
  margin-top:30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 16rpx;
}
.member-title {
  margin: 28rpx 0;
}

.member-main {
  padding: 0 30rpx;
  padding-bottom: 30rpx;
}

.member-list {
  background: #fff;
  border-radius: 16rpx;
}

.item-center {
  padding: 30rpx;
}

.item-center .center-l .center-l-head {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
  overflow: hidden;
}

.item-center .center-detail .detail-status {
  color: #5766DE;
  font-size: 28rpx;
  font-weight: 600;
}

.item-center .center-detail .detail-num {
  font-size: 24rpx;
  color: #9090A8;
}

.item-center .center-detail .detail-intro {
  color: #363651;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.item-center .center-r .detail-operate {
  font-size: 24rpx;
  color: #9090A8;
  border-radius: 4rpx;
  /* background: #6C66FA; */
}
