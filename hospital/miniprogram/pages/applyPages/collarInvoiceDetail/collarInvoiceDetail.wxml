<!--pages/applyPages/collarInvoiceDetail/collarInvoiceDetail.wxml-->
<view class="container flex-column">
  <!-- 状态 -->
  <view class="public-apply-detail-top flex-align-items-center">
    <view class="detail-top-l flex-1">
      <view class="top-l-status">部分交付</view>
      <view class="top-l-tip">您已领取部分物品</view>
    </view>
    <view class="detail-top-r flex-1">
      <view class="top-r-id">ID:20116666666</view>
      <view class="top-r-date">创建日期：2020/05/30</view>
    </view>
  </view>
  <!-- 领取步骤，又是要加判断 -->
  <view class="collar-steps flex-align-items-center">
    <view class="step-box flex-1">
      <view class="step">1</view>
      <view class="step-text">出示领用二维码</view>
    </view>
    <view class="step-box flex-1">
      <view class="step">2</view>
      <view class="step-text">清点物品</view>
    </view>
    <view class="step-box flex-1">
      <view class="step">3</view>
      <view class="step-text">出示身份二维码领走</view>
    </view>
  </view>
  <!-- 中间部分，耗材和资产要动态判断 -->
  <view class="flex-1 overflow-auto">
    <!-- 资产容器 -->
    <view class="assets-container" wx:if="{{false}}">
      <view class="assets-total flex">
        <view class="flex-1">资产明细</view>
        <view>领用总数：1</view>
      </view>
      <view class="assets-list">
        <view class="list-item" wx:for="{{[1,2,3,4]}}" wx:key="index">
          <view class="item-title flex">
            <view class="flex-1 title-name">笔记本</view>
            <view class="title-num">资产编号: 12203399</view>
          </view>
          <view class="item-content assets-has-sign-item flex">
            <view class="content-img img-box">
              <image src="{{aliyunBaseImgUrlPre}}images/logo.png"></image>
            </view>
            <view class="content-detail flex-1 flex-column">
              <view class="detail-top">
                <view>
                  <text class="type">12英寸</text>
                  <text class="type">4G</text>
                  <text class="type">12英寸</text>
                </view>
                <view>office</view>
              </view>
              <view class="detail-bottom">
                <text class="operate-btn">取消认领</text>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <!-- 耗材容器 -->
    <view class="consum-container" wx:if="{{true}}">
      <view class="consum-item consum-has-sign-item">
        <view class="item-title flex">
          <text class="flex-1">耗材明细</text>
          <text>申领总数：10</text>
        </view>
        <view class="item-content">
          <view class="content-title flex">
            <view class="content-name flex-1">物品名称</view>
            <view class="content-spec">规格</view>
            <view class="content-num">领用数量</view>
          </view>
          <view class="content-list">
            <view class="list-item flex">
              <view class="content-name flex-1">中性笔</view>
              <view class="content-spec">大的</view>
              <view class="content-num">12</view>
            </view>
          </view>
          <view class="content-btn">
            <text class="operate-btn">取消领用</text>
          </view>
        </view>
      </view>
      <view class="person-code flex-column">
        <view class="small-code-box img-box">
          <image src="{{aliyunBaseImgUrlPre}}images/small-code.png"></image>
        </view>
        <view class="person-code-name">身份二维码</view>
      </view>
    </view>
  </view>
  <!-- 底部按钮 -->
  <view class="collar-bottom">
    <view class="collar-time-limit">
      仓库领取，领取时限是 23:23:23
    </view>
    <view class="bottom-operates flex">
      <view class="flex-1 operate-l">领用二维码</view>
      <view class="flex-1 operate-r" bindtap="scanSign">扫码签收</view>
    </view>
  </view>
</view>
