/* miniprogram/pages/applyPages/postSale/postSale.wxss */
page{
  background-color: #f4f7ff;
}
.post-sale{
  padding: 30rpx;
}
.post-sale-header-bC{
  position: fixed;
  top: 0;
  width: 100%;
  height: 249rpx;
  background: linear-gradient(308deg, #AC9FFD 0%, #6C66FA 100%);
  border-radius: 0 0 100rpx 100rpx;
  z-index: -25;
}
.post-sale-num{
  padding:24rpx;
}
.van-stepper .van-stepper__minus,.van-stepper .van-stepper__plus{
  border-radius: 50%;
  background-color: #fff;
  border: 1px solid #6c66fa;
  color: #6c66fa;
}
.van-stepper .van-stepper__input{
  width: 68rpx;
  background-color: #fff;
 }
.post-sale-card{
  background-color: #fff;
  border-radius: 0px 0px 8px 8px;
}
.post-sale-card-header{
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  background-color: #F4F7FF;
}
.list-item {
  height: inherit;
  margin-top: 0;
}
.content-img{
  width: 140rpx;
  margin-right: 24rpx;
}
.content-detail .type{
  width: 414rpx;
}
.content-detail-m-t-box{
  padding-right: 88rpx;
  font-size: 24rpx;
}
.post-sale-cell{
  padding: 0 30rpx;
  background-color: #fff;
}
.post-sale-cell .sale-cell-item{
  padding: 30rpx 0;
  border-bottom: 1rpx solid #E7E7F2;
}
.sale-cell-item .sale-cell-item-l{
  margin-right: 32rpx;
 }
 .sale-cell-item .placeholder-txta{
    font-size: 28rpx;
    color: #D1D1E2;
 }
 .sale-cell-item .sale-cell-item-reason{
   width: 100%;
   height: 80rpx;
 }
 .sale-cell-item-img{
   margin-left: 35rpx;
   width: 180rpx;
   height: 180rpx;
   border:1rpx dotted #C4C4D9;
 }
 .van-uploader__preview{
   margin-right: 35rpx !important;
 }
 .van-uploader__upload{
  border:1rpx dotted #C4C4D9;
  background-color: #fff !important;
 }
 .sale-cell-item .upload-img{
    padding-top: 40rpx;
 }
.determine{
  margin-right: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #6C66FA;
  color: #fff;
}
.address-list-box {
    height: 900rpx;
}
.address-list-box .list-top {
    padding: 32rpx 30rpx;
}
.address-list-box .list-center {
    padding-bottom: 30rpx;
}
.add-address-box {
    height: 130rpx;
    box-shadow: 0px -6px 14px 0px rgba(126, 145, 195, 0.2);
}
.add-address-box .add-address-btn {
    border: 1rpx solid #6C66FA;
    color: #6C66FA;
    font-size: 28rpx;
    padding: 17rpx 47rpx;
    border-radius: 60rpx;
}
.empty-box {
    margin-top: 120rpx;
}
.delete-order-box{
  position: fixed;
  left: 0;
  bottom: 0;
}