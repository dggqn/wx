/* pages/AntiEpidemicPages/DistributionPage/Distribution-TaskList/Distribution-TaskList.wxss */
.apply-res-top {
  padding: 30rpx 30rpx 20rpx 30rpx;
  background: #fff
}

.apply-res-top .top-search {
  height: 72rpx
}

.apply-res-top .top-action-sheet {
  color: #30304C;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.list-item-title {
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
  padding-left: 30rpx;
  color: #30304C;
  font-size: 28rpx;
  background: #F4F7FF;
}

.iconfont.iconxiajiantou-new-01 {
  margin-left: 10rpx;
}

.container-list {
  margin-top: 78rpx;
}

.public-list {
  height: 100%;
  overflow: hidden;
  background: rgb(249, 249, 249);
}

.scroll-view-my {
  /* height: 100%; */
  /* padding-bottom: 200rpx; */
  overflow: auto;
}

.scroll-view-my .list-item {
  margin: 24rpx 30rpx 0 30rpx
}

.scroll-view-my .list-item:last-child {
  margin-bottom: 155rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  background: transparent;
}

.list-item .choose-norm .choose-norm-unit {
  font-size: 28rpx;
  color: #9090A8;
}

.list-item .choose-norm .choose-norm-btn {
  width: 58rpx;
  height: 58rpx;
  border-radius: 50%;
  overflow: hidden;
}

.agency-header {
  height: 78rpx;
  background-color: #fff;
  font-size: 32rpx;
  color: #6F6F8E;
  position: fixed;
  z-index: 99;
}

.agency-header-item {
  width: 250rpx;
  text-align: center;
}

.agency-header .active {
  position: relative;
  color: #6C66FA;
}

.agency-header .active::after {
  content: '';
  position: absolute;
  top: 50rpx;
  left: 100rpx;
  width: 38rpx;
  height: 4rpx;
  background-color: #6C66FA;
}

/* 一个圆点 */
.text-dot{
  background-color: #6C66FA;
  height: 16rpx;
  width: 16rpx;
  border-radius: 50%;
  display: inline-block;
  margin: 16rpx;
}