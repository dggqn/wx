<!--miniprogram/pages/address/addOrModifyAddress/addOrModifyAddress.wxml-->
<view class="container flex-column">
  <view class="address-container flex-1 overflow-auto">
    <view class="address-cell-group">
      <view class="address-cell flex-align-items-center">
        <view class="cell-name">联系人</view>
        <view class="cell-edit flex-1">
          <input class="w-100" placeholder="请填写收货人的姓名" data-type="name" value="{{address.name}}" bindinput="bindInput"/>
        </view>
      </view>
      <view class="address-cell flex-align-items-center">
        <view class="cell-name">所在地区</view>
          <view class="cell-edit flex-1">
            <picker mode="region" data-type="addrCodeChn" bindchange="bindInput" value="{{address.addrChn}}">
              {{address.addrCodeChn}}
            </picker>
            <text class="iconfont iconyoujiantou-new-01"></text>
          </view>
      </view>
      <view class="address-cell flex-align-items-center">
        <view class="cell-name">手机号</view>
        <view class="cell-edit flex-1">
          <input class="w-100" placeholder="请填写收货手机号码" data-type="tel" value="{{address.tel}}" bindinput="bindInput"/>
        </view>
      </view>
      <view class="address-cell flex">
        <view class="cell-name">详细地址</view>
        <view class="cell-edit flex-1">
          <textarea class="w-100 textarea" placeholder="例如楼栋号，几层几室" data-type="addrInfo" value="{{address.addrInfo}}" bindinput="bindInput"/>
        </view>
      </view>
      <view class="address-cell flex-align-items-center">
        <view class="cell-name">设为默认</view>
        <view class="cell-edit flex-1 text-right" >
          <switch class="switch" color="#6C66FA" checked="{{address.defaultFlag === true || address.defaultFlag === '1'}}" bindchange="switchChange"/>
        </view>
      </view>
    </view>
  </view>
  <view class="address-btn" bindtap="updateOrInsertAddress">
    保存地址
  </view>
</view>
