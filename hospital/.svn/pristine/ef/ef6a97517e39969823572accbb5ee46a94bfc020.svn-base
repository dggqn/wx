@import '../../../pages/index/supply/supply.wxss';

.public-list{
  padding: 0;
}
page{
  --cell-value-color:#30304C;
}
.assets-change-txra{
  position: relative;
  padding: 20rpx 32rpx;
  background-color: #fff;
}
.assets-change-txra::after{
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  right: 16px;
  bottom: 0;
  left: 16px;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  border-bottom-width: 1px;
  border-bottom-style: solid;
  border-bottom-color: rgb(235, 237, 240);
 }
.assets-change-txra .title{
  margin-bottom: 24rpx;
}
.assets-change-txra .txra{
  padding: 20rpx;
  width: calc( 100% - 40rpx );
  height: 140rpx;
  font-size: 28rpx;
  color: #1C3A62;
  background-color: #ebedf0;
}
.assets-change-txra .placeholder-txra{
  color: #8393A8;
 }
 .assets-change-txra .limit{
   display: flex;
   justify-content: flex-end;
   padding: 10rpx;
   font-size: 24rpx;
   color: #767e82;
   background-color: #ebedf0;
 }
.assets-change-operation{
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 20rpx;
  width: calc( 100% - 40rpx );
  background-color: #fff;
}
.assets-change-operation .btn{
  width: 546rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background: #6C66FA;
  box-shadow: -3rpx -3rpx 14rpx 0rpx rgba(126, 145, 195, 0.2);
  border-radius: 100rpx;
}


.public-list .list-item{
  padding: 38rpx 24rpx 30rpx 24rpx;
}