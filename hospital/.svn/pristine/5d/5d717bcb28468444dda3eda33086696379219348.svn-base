/* pages/repair/repairDetail/repairDetail.wxss */
.step-container {
  background: #fff;
  padding: 32rpx 0 8rpx;
}
.step-container .step-box {
  height: 32rpx;
}
.step-box .step-item {
  height: 100%;
  position: relative;
}
.step-box .step-item::after{
  content: '';
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: -50%;
  width: 100%;
  height: 4rpx;
  background: #E7E7F2;
}
step-box .step-item.active-step::after{
  background: #34A4AF;
}
.step-box .step-item:first-child::after{
  display: none;
}
.step-box .step-item .step-item-dot{
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #34A4AF;
  margin: 0 auto;
  position: relative;
  z-index: 1000;
}
.step-box .step-item.active-step .step-item-dot{
  width: 32rpx;
  height: 32rpx;
}
.step-container .detail-item {
  margin-top: 10rpx;
  color: #BBDBD7;
  text-align: center;
}
.step-container .detail-item.active-detail {
  color: #34A4AF;
}
.step-container .detail-item .detail-item-intro {
  font-size: 24rpx;
}
.step-container .detail-item .detail-item-time {
  font-size: 20rpx;
}

.repair-main{
  padding: 0 30rpx;
  padding-bottom: 30rpx;
}
.repair-person {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 28rpx;
}
.repair-person .person-top{
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}
.repair-person .person-top .person-img{
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}
.repair-person .person-top .person-type{
  font-size: 24rpx;
  color: #6C66FA;
  padding: 2rpx 4rpx;
  border: 1rpx solid #6C66FA;
  border-radius: 2rpx;
  margin-left: 12rpx;
}
.repair-person .person-bottom {
  padding: 21rpx 24rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 33rpx;
  box-shadow: 3rpx 3rpx 14rpx 0 rgba(126,145,195,0.2);
}

.repair-title{
  margin: 28rpx 0;
}
.repair-assets{
  background: #fff;
  padding: 30rpx 40rpx;
  border-radius: 16rpx;
}
.repair-assets .assets-name {
  font-size: 32rpx;
}
.repair-assets .assets-num {
  font-size: 24rpx;
}
.repair-reasons {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.text-desc{
  padding: 20rpx;
  background: #E7E7F2;
  font-size: 24rpx;
  min-height: 228rpx;
  box-sizing: border-box;
}
.text-desc .desc-top {
  font-weight: 500;
}
.text-desc .desc-bottom{
  margin-top: 40rpx;
}
.img-desc {
  justify-content: space-between;
  margin-top: 40rpx;
}
.img-desc .img-desc-item{
  width: 180rpx;
  height: 180rpx;
  border-radius:16px;
  overflow: hidden;
}
.contact-person {
  background: #fff;
  border-radius: 16rpx;
  padding: 60rpx;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.contact-person .contact-person-item {
  margin-top: 40rpx;
  border-bottom: 1rpx solid #C4C4D9;
  color: #30304C;
  font-weight: 400;
  padding-bottom: 10rpx;
}